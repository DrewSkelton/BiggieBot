{
    "compilerOptions": {
        "target": "esnext",
        "module": "nodenext",
        "declaration": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": false,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
    },
    "exclude": ["dist", "node_modules", "tests", "vitest.config.ts"]
}